.PHONY: ice/all ice/clean ice/depclean

ice/all: $(ICE_PY_SOURCES)

ice/clean:
	$(RM) $(ICE_CPP_SOURCES) $(ICE_OBJECTS) $(ICE_PY_SOURCES)

ice/depclean:
	$(RM) $(ICE_DEPS) $(ICE_HEADERS)

$(ICE_CPP_SOURCES) $(ICE_HEADERS): SLICE2CPP_FLAGS := $(ICE_SLICE_FLAGS) $(ICE_SLICE2CPP_FLAGS) $(SLICE_FLAGS) $(SLICE2CPP_FLAGS)
$(ICE_PY_SOURCES): SLICE2PY_FLAGS := $(ICE_SLICE_FLAGS) $(ICE_SLICE2PY_FLAGS) $(SLICE_FLAGS) $(SLICE2PY_FLAGS)

-include $(ICE_DEPS)
